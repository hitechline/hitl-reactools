{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src",
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@fixtures/*": [
        "fixtures/*"
      ],
      "@sections/*": [
        "sections/*"
      ],
      "@layout": [
        "components/Layout"
      ],
      "@components/*": [
        "components/*"
      ]
    }
  }
}
