{
  "extends": "../tsconfig.json",
  "include": ["next-env.d.ts", "src/**/*"],
  "exclude": ["node_modules", ".next", "__next"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["*", "src/*"],
      "@shared/*": ["shared/*"],
      "@styles/*": ["src/styles/*"],
      "@sections/*": ["src/sections/*"],
      "@resources/*": ["src/resources/*"],
      "@layout": ["src/components/Layout"],
      "@components/*": ["src/components/*"]
    }
  }
}
