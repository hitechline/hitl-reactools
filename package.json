{
  "name": "@hitechline/react",
  "version": "1.0.6",
  "license": "AGPL-3.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "fix": "yarn lint:fix && yarn prettier:fix",
    "clean": "rimraf dist typings",
    "release": "yarn node-env-run --exec \"semantic-release\"",
    "prepublishOnly": "yarn build",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watchAll",
    "lint": "eslint ./ --ext js,jsx,ts,tsx",
    "lint:fix": "eslint ./ --ext js,jsx,ts,tsx --fix",
    "prettier": "prettier --check ./**/*.{js,jsx,ts,tsx}",
    "prettier:fix": "prettier --write ./**/*.{js,jsx,ts,tsx}",
    "build": "run-s build:cjs build:esm build:types",
    "prebuild": "yarn clean",
    "postbuild": "run-p compile-paths:cjs compile-paths:esm compile-paths:types",
    "build:watch": "tsc-watch -p build/tsconfig.watch.json --onSuccess \"npm-run-all -s build:cjs build:esm build:types -p compile-paths:cjs compile-paths:esm compile-paths:types\"",
    "prebuild:watch": "yarn clean",
    "build:cjs": "tsc -p build/tsconfig.cjs.json",
    "build:esm": "tsc -p build/tsconfig.esm.json",
    "build:types": "tsc -p build/tsconfig.types.json",
    "build:watch:cjs": "tsc-watch -p build/tsconfig.cjs.json --onSuccess \"npm-run-all -s build:types -p compile-paths:cjs compile-paths:types\"",
    "build:watch:esm": "tsc-watch -p build/tsconfig.esm.json --onSuccess \"npm-run-all -s build:types -p compile-paths:esm compile-paths:types\"",
    "compile-paths:cjs": "tsc-alias -p build/tsconfig.cjs.json",
    "compile-paths:esm": "tsc-alias -p build/tsconfig.esm.json",
    "compile-paths:types": "tsc-alias -p build/tsconfig.types.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hitechline/react.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "files": [
    "dist",
    "typings"
  ],
  "keywords": [
    "react"
  ],
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@hitechline/eslint-config-web": "1.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.0",
    "@semantic-release/npm": "7.0.10",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.0.3",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.1",
    "@types/react-dom": "17.0.1",
    "eslint": "7.20.0",
    "eslint-plugin-testing-library": "3.10.1",
    "jest": "26.6.3",
    "node-env-run": "4.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.3.9",
    "ts-jest": "26.4.4",
    "tsc-alias": "1.2.6",
    "tsc-watch": "4.2.9",
    "typescript": "4.1.5"
  }
}
