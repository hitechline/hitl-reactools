{
  "name": "reactools",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "fix": "run-s lint:fix prettier:fix",
    "release": "yarn workspace:reactools release",
    "workspace:docs": "yarn workspace docs",
    "workspace:reactools": "yarn workspace @hitechline/reactools",
    "lint": "eslint ./ --ext js,jsx,ts,tsx",
    "lint:fix": "eslint ./ --ext js,jsx,ts,tsx --fix",
    "prettier": "prettier --check ./**/*.{js,jsx,ts,tsx}",
    "prettier:fix": "prettier --write ./**/*.{js,jsx,ts,tsx}",
    "test": "jest --passWithNoTests",
    "test:all": "node scripts/test-all",
    "test:watch": "yarn test --watchAll",
    "test:reactools": "yarn workspace:reactools test",
    "test:reactools:watch": "yarn workspace:reactools test",
    "build:docs": "yarn workspace:docs build && yarn workspace:docs export",
    "build:reactools": "yarn workspace:reactools build",
    "build:reactools:watch": "yarn workspace:reactools build:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hitechline/react.git"
  },
  "workspaces": {
    "packages": [
      "docs",
      "reactools"
    ]
  },
  "devDependencies": {
    "@hitechline/eslint-config-web": "1.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.0",
    "@semantic-release/npm": "7.0.10",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.0.3",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.1",
    "@types/react-dom": "17.0.1",
    "eslint": "7.20.0",
    "eslint-plugin-testing-library": "3.10.1",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.3.9",
    "ts-jest": "26.4.4",
    "typescript": "4.1.5"
  }
}
